<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persisntence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation= "http://xmlns.jcp.org/xml/ns/persisntence http://xmlns.jcp.org/xml/ns/persisntence/persistence_2_0.xsd">
    <persistence-unit name="Persistencia" transaction-type="RESOURCE_LOCAL">
        
        <class>
            com.balku.erp_balku.model.Cliente
        </class>
        
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/balku_erp?useSSL=false" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.passwors" value="root" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
               
        </properties>
        
    </persistence-unit>





</persistence>